 <script>
var data = <%- JSON.stringify(imgData) %>

//form HTML iframe
var htmlImgStr = ''

data.forEach(function(item) {

    var srcURL = 'https://trinket.io/embed/python/' + item.id
    var itemStr = '<div id="imgItem"><iframe src="' + srcURL +
    '?outputOnly=true&start=result&showInstructions=true"' +
    ' width="100%" height="356" frameborder="0" marginwidth="0" marginheight="0" '+
    'allowfullscreen"></iframe>'+
    '<p><a href="'+ srcURL +'">' + item.user + '</a></p></div>'

    htmlImgStr += itemStr
});

document.getElementById('imgHolder').innerHTML = htmlImgStr

  </script>

